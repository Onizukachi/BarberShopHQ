<h2>Список записавшихся</h2>

<table border="1" cellpadding="10" cellpadding="0">
    <tr>
        <th>Имя</th>
        <th>Телефон</th>
        <th>Дата</th>
        <th>Парикмахер</th>
    </tr>
        
    <% @client.each do |client| %>
    <tr>
        <td><a href="/client/<%= client.id %>"><%= client.name %></a></td>
        <td><%= client.phone %></a></td>
        <td><%= client.datestamp %></a></td>
        <td><%= client.barber %></a></td>
    </tr>
<% end %>
</table>